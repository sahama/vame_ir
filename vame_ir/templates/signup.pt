<html metal:use-macro="load: main.pt">

<div metal:fill-slot="content">
<form name="signup" method="post">
    نام: <input type="text" name="first_name" value="${first_name}"><br>
    نام خانوادگی: <input type="text" name="last_name" value="${last_name}"><br>
    نام کاربری: <input type="text" name="login_name" value="${login_name}"><br>
    گذرواژه: <input type="password" name="password" value="${password}"><br>
    رایانامه: <input type="email" name="email" value="${email}"><br>
    تلفن: <input type="tel" name="phone" value="${phone}"><br>
    تلفن همراه: <input type="tel" name="mobile" value="${password}"><br>
    <input type="submit" name="submit" value="ثبت">
</form>
</div>
</html>